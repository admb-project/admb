all:
	CXX=@cxx@ CXXFLAGS="@arch_cxxflag@" LIBPATH=@libpath@ DISK=@disk@ make --directory=src --file=@makefile@

verify:
	DISK=@disk@ make --directory=src --file=@makefile@ verify

install:
	cp -R @disk@ @prefix@/admb
	ln -sf scripts/bash/admb-bin @prefix@/bin/admb

clean:
	make --directory=src --file=@makefile@ clean
