[Setup]
PrivilegesRequired=none
AppName=ADMB-@version@
AppVerName=ADMB-@version@
UsePreviousAppDir=no
UsePreviousGroup=no
DefaultDirName={pf}\ADMB-@version@
DefaultGroupName=ADMB-@version@ (MinGW GCC-@gccversion@)
UninstallDisplayIcon={app}\uninstall.exe
OutputDir=..\..\..\build
OutputBaseFilename=@target@
AppPublisher=www.admb-project.org
AppPublisherURL=http://www.admb-project.org/
LicenseFile=..\..\..\LICENSE.txt
AlwaysShowComponentsList=no

[Types]
Name: "mingw"; Description: "ADMB-@version@ (MinGW GCC-@gccversion@)"

[Files]
Source: "..\..\..\build\@target@\*"; DestDir: "{app}"; Excludes: ".svn,*\.svn"; Flags: recursesubdirs

[Icons]
Name: "{group}\ADMB-@version@ Command Prompt (MinGW GCC-@gccversion@)"; Filename: "{cmd}"; Parameters: "/K ""{app}\bin\set-admb-mingw.bat"""; WorkingDir: "{app}"; Comment: "ADMB-@version@ Command Prompt (MinGW GCC-@gccversion@)"
Name: "{group}\Uninstall"; Filename: "{uninstallexe}"; Comment: "Uninstall ADMB-@version@ "
